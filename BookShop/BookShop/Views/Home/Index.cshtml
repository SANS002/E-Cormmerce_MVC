@model BookDisplayModel

@{

}
<div class="my-2">
    <form asp-action="Index" method="get" class="row row-cols-lg-auto g-3 align-items-center">
        <div class="col-12">
            <label class="visually-hidden" for=" genreId">Genres</label>
        <select class="form-select" id="genreId" name="genreId">
                <option selected>Genres</option>
            @foreach(var genre in Model.Genres)
            {
                <option value ="@(genre.Id == Model.GenreId)" value="@genre.Id">@genre.GenreName</option>
                
            }
        </select>
        </div>

        <div class="col-12">
            <label class="visually-hidden" for="sterm">Search by title</label>
            <div class="input-group">
                <div class="input-group-text"></div>
                <input type="text" class="form-control" value="@Model.STerm" id="sterm" name="sterm" placeholder="search by title" />
            </div>
        </div>

        <div class="col-12">
            <button type="submit" class="btn btn-primary">Search</button>
            <a href="/Home/Index" class="btn btn-dark">Reset</a>
        </div>
      </form>
</div>
            

<div class="w-100 d-flex flex-wrap">
    @foreach(var book in Model.Books)
    { 
        <div class="card mx-2 mt-4 mb-4" style="width:12rem;">
            @if(string.IsNullOrEmpty(book.Image))
            {
                <img style="width:100%; height:180px" src="/css/images/oip.jpg" class="card-img-top" alt="...">
            }
            else
            {
                <img style="width:100%; height:180px" src="@book.Image" class="card-img-top" alt="...">
            }

            <div class="card-body">
                <h5 class="card-title">@book.BookName</h5>

                <ul>
                    <li class="card-text"><b>Genre</b> : @book.GenreName</li>
                    <li><b>Author</b> : @book.AuthorName</li>
                    <li><b>Price</b> : @book.Price</li>
                    @* <li><b>Quntity</b> : @book.Quantity</li> *@
                </ul>
                @if (book.Quantity > 0)
                {
                    <button type="button" onclick="add(@book.Id)" class="btn btn-primary">Add to cart</button>
                }
                else
                {
                    <span style="border: 1px solid;padding: 5px 8px;color: red;border-radius: 5px;">Out of stock</span>
                }

                @* <p class="card-text"><b>Genre</b> : @book.GenreName</p> *@
                @* <p> <b>Price</b> : @book.Price</p> *@
                @* <p> <b>Author</b> : @book.AuthorName</p> *@
                <button type="button" onclick="add(@book.Id)" class="btn btn-primary">Add To Cart</button>
            </div>
        </div>
    }

</div>

@section Scripts{
    <script>  
        async function add(bookId)
        {
            try{
            // var response = await fetch('/Cart/Additem?bookId=${bookId}');
            var response = await fetch(`/Cart/Additem?bookId=${bookId}`);

                if (response.status == 200){
                    var  result = await response.json();
                    console.log(result);
					var cartCountEl = document.getElementById("cartCount");
                    cartCountEl.innerHTML=result;

                } 
            }
            catch(err){
                console.log(err);   
            }
            
        }

    </script>

}